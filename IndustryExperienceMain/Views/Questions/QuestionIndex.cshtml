@model Tuple<List<Question>, List<Answer>, int>
@{
    ViewData["Title"] = "Question One";
}
<link rel="stylesheet" type="text/css" href="../css/Questions.css">

<div class="container-fluid">
    <div class="row" style="padding-bottom: 10px">
        <h1 class="text-center">Find Your Fit!</h1>
        <h3 class="text-center">Answer the questions below and we will<br />match you with the perfect volunteering opportunity.</h3>
        <br />
    </div>
    <div class="row justify-content-center">
        <div class="card">
            <div class="progress-bar">
                <div class="progress"></div>
            </div>
            @using (Html.BeginForm("QuestionTwo", "Questions", FormMethod.Post))
            {
                var QuestionList = Model.Item1.ToList();
                var AnswerList = Model.Item2.ToList();
                var question1 = QuestionList[0];
                <h2 id="question">@question1.Text</h2>
                <ul>
                    @foreach (var answer in AnswerList)
                    {
                        if (answer.QuestionId.Equals(question1.Id))
                        {
                            <input id="answer1" name="answer1" type="radio" style="display:none" required />
                            <p>@Html.RadioButton("answer1", answer.Points) @answer.Text</p>
                        }
                    }
                </ul>
                <input type="submit" value="Next Question">
            }
        </div>
    </div>
</div>


<style>
    h1 {
        color: #63b6bb;
    }

    .progress-bar {
        width: 100%;
        height: 10px;
        background-color: transparent;
    }

    .progress {
        width: 0%;
        height: 100%;
        background-color: #63b6bb;
        transition: width 0.3s ease-in-out;
    }
</style>

<script>
    var currentPage = 1;

    function updateProgressBar() {
        var progress = (currentPage - 1) / 7 * 100;
        document.querySelector('.progress').style.width = progress + '%';
    }
    updateProgressBar();

</script>