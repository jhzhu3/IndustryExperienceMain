@model Tuple<List<Question>, List<Answer>>
@{
    ViewData["Title"] = "QuestionIndex";
}

<h1>Question One Index</h1>

@using (Html.BeginForm("QuestionTwo", "Questions", FormMethod.Post))
{
    var QuestionList = Model.Item1.ToList();
    var AnswerList = Model.Item2.ToList();
    var question1 = QuestionList[0];
    <h2>@question1.Text</h2>
    <ul>
        @foreach (var answer in AnswerList)
        {
            if (answer.QuestionId.Equals(question1.Id))
            {
                <li>@Html.RadioButton("answer1", answer.Points) @answer.Text</li>
            }
        }
    </ul>
    <input type="submit" value="Next Question"></input>
}