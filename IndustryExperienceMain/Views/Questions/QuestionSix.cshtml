@model Tuple<List<Question>, List<Answer>, int>
@{
    ViewData["Title"] = "Question Six";
}

@{
    int point = Model.Item3;
}
<link rel="stylesheet" type="text/css" href="../css/Questions.css">

<div class="container-fluid">
    <div class="row justify-content-center">
        <div class="card">
            <h2 style="font-size: 40px;"><b>Question 6 of 7</b></h2>
            @using (Html.BeginForm("QuestionSeven", "Questions", FormMethod.Post))
            {
                var QuestionList = Model.Item1.ToList();
                var AnswerList = Model.Item2.ToList();
                var question6 = QuestionList[5];
                <h2 id="question">@question6.Text</h2>
                <ul>
                    @foreach (var answer in AnswerList)
                    {
                        if (answer.QuestionId.Equals(question6.Id))
                        {
                            <p>@Html.RadioButton("answer6", answer.Points + point) @answer.Text</p>
                        }
                    }
                </ul>
                <input type="submit" value="Next Question"></input>
            }
        </div>
    </div>
    
</div>