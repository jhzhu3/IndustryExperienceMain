@model Tuple<List<Question>, List<Answer>, int>
@{
    ViewData["Title"] = "Question Four";
}

@{
    int point = Model.Item3;
}
<link rel="stylesheet" type="text/css" href="../css/Questions.css">

<div class="container-fluid">
    <div class="row justify-content-center">
        <div class="card">
            <h2 style="font-size: 40px;"><b>4 of 7</b></h2>
            @using (Html.BeginForm("QuestionFive", "Questions", FormMethod.Post))
            {
                var QuestionList = Model.Item1.ToList();
                var AnswerList = Model.Item2.ToList();
                var question4 = QuestionList[3];
                <h2 id="question">@question4.Text</h2>
                <ul>
                    @foreach (var answer in AnswerList)
                    {
                        if (answer.QuestionId.Equals(question4.Id))
                        {
                            <input id="answer4" name="answer4" type="radio" style="display:none" required />
                            <p>@Html.RadioButton("answer4", answer.Points + point) @answer.Text</p>
                        }
                    }
                </ul>
                <input type="submit" value="Next Question"></input>
            }
        </div>
    </div>
    
</div>