@model IEnumerable<IndustryExperienceMain.Models.Job>

@{
    ViewData["Title"] = "PreferenceDisplay";
}

<h1>PreferenceDisplay</h1>

@{
    var jobList = Model.ToList();
    if (!jobList.Any())
    {
        <div class="align-content-center">
            <h1 class="text-center">OOPS!</h1>
            <p>
                <center>Sorry no matches found!</center>
                <center>The opportunity you are looking for is currently not in our database,</center>
                <center>but this site will be updated periodically to include more items.</center>
                <center>Stay tuned for more updates!</center>
            </p>
        </div>
    }
    else
    {
        foreach (var item in Model)
        {
            <p>Type of Work: @Html.DisplayFor(modelItem => item.TypeOfWork)</p>
            <p>Commitment: @Html.DisplayFor(modelItem => item.Commitment)</p>
            <p>Time Section: @Html.DisplayFor(modelItem => item.TimeSection)</p>
            <p>Location: @Html.DisplayFor(modelItem => item.Workplace)</p>
            <p>Agency: @Html.DisplayFor(modelItem => item.AgencyId)</p>
        }
    }
}

