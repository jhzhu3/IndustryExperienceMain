<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - IndustryExperienceMain</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/IndustryExperienceMain.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between flex-column">
                    
                    <ul class="navbar-nav flex-grow-1 me-auto style=" align-items: center;"">
                        <li class="navbar-brand">
                            <a asp-area="" asp-controller="Home" asp-action="Index" style="text-decoration:none;">
                                <h4 class="m-0" style="color: #63b6bb;">Youth Against Poverty</h4>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark @if (ViewContext.RouteData.Values["action"].ToString() == "Infographics") { <text>nav-item-active</text>}" asp-area="" asp-controller="Home" asp-action="Infographics">Learn</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark @if (ViewContext.RouteData.Values["action"].ToString() == "Test") { <text>nav-item-active</text> }" asp-area="" asp-controller="Questions" asp-action="QuestionIndex">Check</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark @if (ViewContext.RouteData.Values["action"].ToString() == "PreferenceCheck") {<text>nav-item-active</text>}" asp-area="" asp-controller="Jobs" asp-action="PreferenceCheck">Search</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3 mt-5">
            @RenderBody()
        </main>
    </div>

@*    <footer class="border-top footer text-muted">
        <div class="container">
            Youth Against Poverty by Social Software Squad <a asp-area="" asp-controller="Home" asp-action="About">About Us</a>
        </div>
    </footer>*@
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

<style>
    .navbar {
        background-color: rgba(255, 255, 255, 0.7);
        /*backdrop-filter: blur(5px);*/
    }
    .nav-item:hover {
        background-color: #77DD77;
        border-radius: 10px;
    }

    .nav-item-active {
        background-color: rgba(119, 221, 119, 0.5);
        border-radius: 10px;
    }

    .navbar-nav .nav-link {
        color: black;
    }

  
 </style>
