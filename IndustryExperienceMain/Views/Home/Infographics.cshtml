<h1 class="text-center"><b style="font-family:Consolas">Educational Level VS Income Bracket</b></h1>

<div class="container" id="main" style="width: 100%;height:600px;"></div>

<script type="text/javascript">
    // initialize the dom of echart
    var myChart = echarts.init(document.getElementById('main'));

    option = {
        tooltip: {
            trigger: 'axis',
            axisPointer: {
                type: 'shadow'
            }
        },
        legend: {
            right: 'auto',
            data: ['Bachelor', 'Certificate I-III', 'Apprenticeship & Traineeship', 'Certificate IV or higher', 'Employed']
        },
        grid: {
            left: '3%',
            right: '20%',
            bottom: '3%',
            containLabel: true
        },
        xAxis: {
            name: 'NO. of Students',
            type: 'value'
        },
        yAxis: {
            name: 'Income Bracket',
            type: 'category',
            data: ['Highest', 'Upper-middle', 'Lower-middle', 'Lowest']
        },
        textStyle: {
            fontSize: 14
        },
        series: [
            {
                name: 'Bachelor',
                type: 'bar',
                stack: 'total',
                label: {
                    show: true
                },
                data: [7382, 4259, 2998, 2836],
                color: '#3796FC'
            },
            {
                name: 'Certificate I-III',
                type: 'bar',
                stack: 'total',
                label: {
                    position: 'insideRight'
                },
                data: [217, 316, 304, 323],
                color: '#6AEA6C'
            },
            {
                name: 'Apprenticeship & Traineeship',
                type: 'bar',
                stack: 'total',
                label: {
                    position: 'insideRight'
                },
                data: [515, 621, 569, 550],
                color: '#7D6AEA'
            },
            {
                name: 'Certificate IV or higher',
                type: 'bar',
                stack: 'total',
                label: {
                    position: 'insideRight'
                },
                data: [1094, 1097, 947, 867],
                color: '#EA6A6A'
            },
            {
                name: 'Employed',
                type: 'bar',
                stack: 'total',
                label: {
                    position: 'insideRight'
                },
                data: [1605, 1266, 1290, 1217],
                color: '#6AEADB'
            }
        ]
    };
    myChart.setOption(option);
</script>

<br></br>
<br></br>

