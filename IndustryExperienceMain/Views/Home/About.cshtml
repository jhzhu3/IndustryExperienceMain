<style>
    #about {
        position: absolute;
        margin: auto;
        top: 0;
        right: 0;
        bottom: 0;
        left: 0;
        width: 500px;
        height: 200px;
    }

    .slideshow {
        margin-top: 20px;
        box-shadow: 0px 5px 20px 0px rgba(0, 0, 0, 0.3);
        padding: 15px;
        border-radius: 10px;
    }
    .team-member-card {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        width: 200px;
        height: 300px;
        background-color: #f0f0f0;
        border-radius: 10px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.2);
        margin: 20px;
    }
    
    .team-member-image {
        width: 100%;
        height: 60%;
        display: flex;
        align-items: center;
        justify-content: center;
    }
    
    .team-member-image img {
        width: 80%;
        height: auto;
        border-radius: 50%;
    }
    
    .team-member-info {
        width: 100%;
        height: 40%;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        text-align: center;
    }
    
    .team-member-info h3 {
        margin: 8px 0;
        font-size: 1rem;
        font-weight: bold;
    }
    
    .team-member-info p {
        margin: 5px 0;
        font-size: 1rem;
    }
    
    .team-member-info img {
